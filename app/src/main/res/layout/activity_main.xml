<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="82dp"
        android:fontFamily="@font/roboto"
        android:text="Welcome To Fin-Ai"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/window_color"
        android:onClick="logout"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reviewButton"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/window_color"
        android:onClick="goToReview"
        android:text="Rate &amp; Review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supportButton" />

    <Button
        android:id="@+id/supportButton"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/window_color"
        android:onClick="goToSupport"
        android:text="Support"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToEstimatePriceOfHouse" />

    <Button
        android:id="@+id/goToLoanCalc"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/window_color"
        android:onClick="goToLoanCalc"
        android:text="Loan Calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/goToEstimatePriceOfHouse"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/window_color"
        android:onClick="goToHousePriceEstimator"
        android:text="House Price Estimator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToLoanCalc" />

    <Button
        android:id="@+id/requestProfessioanlButton"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/window_color"
        android:onClick="goToProfessional"
        android:text="Request a Professional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewButton" />

</androidx.constraintlayout.widget.ConstraintLayout>